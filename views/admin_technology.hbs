{{> _admin_header }}
<div class="container">
    <div class="row">
      <aside class="col s12 m3">
        <div class="profile center">
          <img src="{{ user._json.avatar_url }}" class="circle profile-image z-depth-2" alt="{{user.username}} profile">
          <h6><a href="https://github.com/{{ user.username }}">{{ user.username }}</a></h6>
          <p>{{ user.displayName }}</p>
          <p><a href="mailto:{{ user.email }}">{{ user.email }}</a></p>
        </div> 
      </aside>

      <main class="col s12 m9">
        <h3 class="uppercase">Add A NEW Technology</h3>
        <hr>


          
                <div class="row">
                    <br>
                    <br>
                    <form class="col s12" action="/admin/technology/type/add" method="POST">
                        
                        <div class="row">
                            <div class="input-field col s12 m12">
                            <input placeholder="i.e., PHP. Laravel" id="technology_type" type="text" name="technology_type">
                            <label for="technology_type">New Technology</label>
                            </div>
                            <br>
                        </div>
                                
                        <div class="row">
                            <div class="input-field col s12">
                                <button class="waves-effect waves-light btn" type="submit">Add NEW Technology</button>
                            </div>
                        </div>
                    </form>
                    
            <main class="col s12 m12">
                <br>
                <br>
                <hr>
                <h3 class="uppercase">EXISTING TECHNOLOGIES</h3>
                <hr>

                        <div class="row">
                            <div class="input-field col s6 m12">
                            <p>
                                {{#each technologyInfo}}
                                <h5>- {{tech}}</h5>
                                {{/each }}
                            </p>
                            </div>
                        </div>


                </div>
    </div><!-- /row -->
</div><!-- /container -->
{{> _footer }}